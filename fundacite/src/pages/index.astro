            // Script para el desplazamiento suave sin 'this' y con comprobaci√≥n
                    // Modal de registro
        const openRegistrationBtn = document.getElementById('openRegistrationModal');
        const registrationModal = document.getElementById('registrationModal');
        const closeRegistrationBtn = document.getElementById('closeRegistrationModal');

        if (openRegistrationBtn && registrationModal && closeRegistrationBtn) {
            const modalContent = registrationModal.querySelector('.modal-content');
            
            const openModal = () => {
                registrationModal.classList.remove('hidden');
                registrationModal.classList.add('flex');
                
                // Animate backdrop
                // @ts-ignore
                anime({
                    targets: registrationModal,
                    opacity: [0, 1],
                    duration: 300,
                    easing: 'easeOutQuad'
                });
                
                // Animate modal content
                // @ts-ignore
                anime({
                    targets: modalContent,
                    opacity: [0, 1],
                    scale: [0.7, 1],
                    translateY: [-50, 0],
                    duration: 400,
                    easing: 'cubicBezier(0.34, 1.56, 0.64, 1)'
                });
            };

            const closeModal = () => {
                // Animate out
                // @ts-ignore
                anime({
                    targets: modalContent,
                    opacity: [1, 0],
                    scale: [1, 0.7],
                    translateY: [0, -50],
                    duration: 300,
                    easing: 'easeInQuad',
                    complete: () => {
                        registrationModal.classList.add('hidden');
                        registrationModal.classList.remove('flex');
                    }
                });
            };

            openRegistrationBtn.addEventListener('click', openModal);
            closeRegistrationBtn.addEventListener('click', closeModal);

            registrationModal.addEventListener('click', (event) => {
                if (event.target === registrationModal) {
                    closeModal();
                }
            });

            // Exponer cierre global para usarlo desde el formulario
            // eslint-disable-next-line @typescript-eslint/no-explicit-any
            (window)['closeRegistrationModal'] = closeModal;
        }

            // Gallery Slider Functionality
            let currentSlide = 0;
            const slides = document.querySelectorAll('.gallery-slide');
            const dots = document.querySelectorAll('.dot');
            const totalSlides = slides.length;

            function showSlide(n) {
                slides.forEach(slide => slide.classList.remove('active'));
                dots.forEach(dot => dot.classList.remove('active'));
                
                slides[n].classList.add('active');
                dots[n].classList.add('active');
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % totalSlides;
                showSlide(currentSlide);
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
                showSlide(currentSlide);
            }

            document.getElementById('nextBtn').addEventListener('click', nextSlide);
            document.getElementById('prevBtn').addEventListener('click', prevSlide);

            dots.forEach(dot => {
                dot.addEventListener('click', function() {
                    currentSlide = parseInt(this.getAttribute('data-index'));
                    showSlide(currentSlide);
                });
            });

            // Auto-advance slides every 5 seconds
            setInterval(nextSlide, 5000);
        </script>

