                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Secci√≥n de Contacto -->
    <section id="contacto" class="w-full bg-gradient-to-r from-[#163E66] to-[#1F5A8A]">
        <!-- Contact Form -->
        <ContactForm />
        
        <!-- Google Maps Small -->
        <div class="w-full px-6 lg:px-12 xl:px-24 py-8">
            <div class="w-full max-w-2xl mx-auto h-64 rounded-lg overflow-hidden shadow-lg border border-white/10">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d693.2662943566613!2d-66.92770073532562!3d10.602113879456969!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c2a5d0021f5a14f%3A0x4d7d6001fe5ea578!2sGimnasio%20Vertical%20La%20Guaira!5e0!3m2!1ses!2sve!4v1763400921751!5m2!1ses!2sve" 
                    class="w-full h-full border-0" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </section>

    <script>
        // Script para el men√∫ m√≥vil con comprobaci√≥n de nulos
        const menuToggle = document.getElementById('menu-toggle');
        if (menuToggle) {
            menuToggle.addEventListener('click', function() {
                const menu = document.getElementById('menu');
                if (menu) {
                    menu.classList.toggle('hidden');
                    menu.classList.toggle('md:hidden');
                }
                });
            }

            // Script para el desplazamiento suave sin 'this' y con comprobaci√≥n
                    // Modal de registro
        const openRegistrationBtn = document.getElementById('openRegistrationModal');
        const registrationModal = document.getElementById('registrationModal');
        const closeRegistrationBtn = document.getElementById('closeRegistrationModal');

        if (openRegistrationBtn && registrationModal && closeRegistrationBtn) {
            const openModal = () => {
                registrationModal.classList.remove('hidden');
                registrationModal.classList.add('flex');
            };

            const closeModal = () => {
                registrationModal.classList.add('hidden');
                registrationModal.classList.remove('flex');
            };

            openRegistrationBtn.addEventListener('click', openModal);
            closeRegistrationBtn.addEventListener('click', closeModal);

            registrationModal.addEventListener('click', (event) => {
                if (event.target === registrationModal) {
                    closeModal();
                }
            });

            // Exponer cierre global para usarlo desde el formulario
            // eslint-disable-next-line @typescript-eslint/no-explicit-any
            (window)['closeRegistrationModal'] = closeModal;
        }

            // Gallery Slider Functionality
            let currentSlide = 0;
            const slides = document.querySelectorAll('.gallery-slide');
            const dots = document.querySelectorAll('.dot');
            const totalSlides = slides.length;

            function showSlide(n) {
                slides.forEach(slide => slide.classList.remove('active'));
                dots.forEach(dot => dot.classList.remove('active'));
                
                slides[n].classList.add('active');
                dots[n].classList.add('active');
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % totalSlides;
                showSlide(currentSlide);
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
                showSlide(currentSlide);
            }

            document.getElementById('nextBtn').addEventListener('click', nextSlide);
            document.getElementById('prevBtn').addEventListener('click', prevSlide);

            dots.forEach(dot => {
                dot.addEventListener('click', function() {
                    currentSlide = parseInt(this.getAttribute('data-index'));
                    showSlide(currentSlide);
                });
            });

            // Auto-advance slides every 5 seconds
            setInterval(nextSlide, 5000);
        </script>

<style>
  html {
    scroll-behavior: smooth;
    scroll-snap-type: y mandatory;
  }

  section {
    scroll-snap-align: start;
    perspective: 2000px;
    perspective-origin: center center;
  }

  [data-scroll-heading] {
    position: relative;
    display: inline-block;
    will-change: transform, opacity, filter, text-shadow;
    transform-style: preserve-3d;
    perspective: 1000px;
    backface-visibility: hidden;
    letter-spacing: 0.05em;
    font-weight: 700;
  }

  /* Gallery Slider Styles */
  .gallery-slider {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .gallery-slide {
    display: none;
    width: 100%;
    animation: fadeIn 0.5s ease-in-out;
  }

  .gallery-slide.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .gallery-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 209, 255, 0.8);
    color: white;
    border: none;
    padding: 12px 16px;
    cursor: pointer;
    border-radius: 50%;
    z-index: 10;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gallery-btn:hover {
    background: rgba(0, 209, 255, 1);
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.6);
  }

  .gallery-prev {
    left: 16px;
  }

  .gallery-next {
    right: 16px;
  }

  .gallery-dots {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .dot.active {
    background: #00D1FF;
    box-shadow: 0 0 10px rgba(0, 209, 255, 0.8);
    width: 32px;
    border-radius: 6px;
  }

  .dot:hover {
    background: rgba(255, 255, 255, 0.8);
  }

  /* Scroll progress bar */
  .scroll-progress {
    position: fixed;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #00D1FF, #64FFDA);
    bottom: 0;
    transform: scaleX(0);
    transform-origin: left;
    z-index: 1000;
    box-shadow: 0 0 20px rgba(0, 209, 255, 0.5);
  }
</style>

</Layout>