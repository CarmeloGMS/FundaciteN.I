<script>
  (function(){
    const maybeForm = document.getElementById('footerContact');
    const status = document.getElementById('footerStatus');
    if(!(maybeForm instanceof HTMLFormElement)) return;
    const form = maybeForm;
    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      if(status) status.textContent = 'Enviando...';
      const fd = new FormData(form);
      const payload = {
        name: fd.get('name'),
        email: fd.get('email'),
        message: fd.get('message')
      };
      try{
        const res = await fetch('/api/contact',{ 
          method:'POST',
          headers:{'Content-Type':'application/json'},
          body: JSON.stringify(payload)
        });
        if(res.ok){
          if(status) status.textContent = 'Mensaje enviado. Gracias.';
          form.reset();
        } else {
          const text = await res.text();
          if(status) status.textContent = 'Error: ' + (text || res.statusText);
        }
      }catch(err){
        if(status) status.textContent = 'Error de red.';
        console.error(err);
      }
    });
  })();
</script>