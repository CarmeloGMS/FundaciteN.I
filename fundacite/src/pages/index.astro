    <!-- Secci√≥n de Programas -->
    <section id="programas" class="min-h-screen w-full flex items-center justify-center bg-sky-700/100" data-scroll-animate>
        <div class="w-full px-6 lg:px-12 xl:px-24 max-w-7xl">
            <div class="text-center mb-16">
                <h4 class="text-3xl md:text-4xl font-bold text-[#64FFDA] mb-4 motion-card animate__fadeInUp animate__animated animate__bounce animate__delay-1s" data-scroll-heading>Programas de Innovaci√≥n</h4>
                <p class="text-[#8892B0] max-w-2xl mx-auto animate__fadeInUp animate__animated animate__bounce animate__delay-2s">Descubre nuestras l√≠neas de acci√≥n para impulsar el talento cient√≠fico y tecnol√≥gico</p>
            </div>

            <div class="mb-12 flex justify-center">
